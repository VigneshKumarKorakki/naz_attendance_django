{
  "editor.formatOnSave": true,
  "python.formatting.provider": "none",
  "black-formatter.args": [
    "--line-length",
    "120"
    // "--skip-string-normalization",
    // "--target-version",
    // "py38",
  ],

  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.flake8Enabled": true,
  // "flake8.args": ["--max-line-length=150", "--ignore=E203,E501,W503"],
  "flake8.args": ["--line-length", "120"],
  // "python.linting.pylintArgs": ["--max-line-length=200"]
  // "python.linting.pycodestyleArgs": ["--max-line-length=100"],
  // "editor.wordWrap": "wordWrapColumn",
  // "editor.wordWrapColumn": 79,

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // Django-HTML
  "files.associations": {
    "**/*.html": "html",
    "**/templates/*/*.html": "django-html",
    "**/templates/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "[django-html]": {
    // "editor.defaultFormatter": "batisteo.vscode-django"
    "editor.formatOnSave": false
  },
  "python.analysis.autoImportCompletions": false,
  // "emmet.includeLanguages": {
  //   "django-html": "html"
  // },
  // "beautify.language": {
  //   "html": ["htm", "html", "django-html"]
  // }
  "remote.extensionKind": {
    "GitHub.copilot": ["ui"]
  },

  "folder-path-color.folders": [
    {
      "path": "project",
      "symbol": "P",
      "tooltip": "Project Folder",
      "color": "yellow"
    }
  ],
